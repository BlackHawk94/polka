<!DOCTYPE html>
<html>
  <head>
    <title>Polka</title>
    <link rel="stylesheet" href="/stylesheets/modern.css">
    <link rel="stylesheet" href="/stylesheets/site.css">
  </head>
  <body id="page-index" class="modern-ui">
    <div class="page secondary">
      <div class="page-header">
        <div class="page-header-content">
          <h1>Polka</h1>
        </div>
      </div>

      <div class="page-region">
        <div class="page-region-content">

          <section id="menu" class="grid">

            <div class="row">
              <div class="tile double bg-color-orangeDark">
                <div class="tile-content">
                  <h2><a href="/play">Play &#x25BA;</a></h2>
                </div>
                <div class="brand">
                  <div class="badge"><%= Object.keys(manager.clients).length %></div>
                  <div class="name">Listeners</div>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="tile double bg-color-blue">
                <div class="tile-content">
                  <h2><a href="/queue">Queue &#x29C9;</a></h2>
                </div>
                <div class="brand">
                  <div class="badge"><%= playlist.tracks.length %></div>
                  <div class="name">Tracks</div>
                </div>
              </div>
            </div>

          </section>

        </div>
      </div>
    </div>

    <script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jquery/1.8/jquery.js"></script>
    <script type="text/javascript">
$(function () {
  $('#menu .tile').click(function () {
    location.href = $(this).find('a').attr('href');
  });
});
    </script>
  </body>
</html>
